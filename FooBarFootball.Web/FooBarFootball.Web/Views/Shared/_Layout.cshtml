<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap/bootstrap.css" type="text/css" rel="stylesheet"/>
    <link href="~/Content/bootstrap/bootstrap-theme.min.css" type="text/css" rel="stylesheet"/>
</head>
<body ng-app="fooBarApp">
   <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">FooBar Football</a>
        </div>
        
          <div class="navbar-collapse collapse">
          <form class="navbar-form navbar-right">
              <div data-ng-include="'Scripts/app/views/users.html'"></div>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </div>
    @RenderBody()
    <script src="https://cdn.firebase.com/js/client/1.0.6/firebase.js"></script>
    <script src="https://cdn.firebase.com/libs/angularfire/0.7.0/angularfire.min.js"></script>
    @Scripts.Render("~/bundles/jquery",
                    "~/bundles/jqueryui",
                    "~/bundles/bootstrap",
                    "~/bundles/angular")
    <script type='text/javascript'src='https://cdn.firebase.com/js/simple-login/1.3.0/firebase-simple-login.js'></script>
    <script src="https://cdn.firebase.com/libs/angularfire/0.7.0/angularfire.min.js"></script>
    @Scripts.Render(
                    "~/bundles/signalr",
                    "~/bundles/app")
    @RenderSection("scripts", required: false)
    
    <div id="footer">
      <div class="container">
        <p class="text-muted credit">&copy; FooBar Football 2014</p>
      </div>
    </div>
    
</body>
</html>
